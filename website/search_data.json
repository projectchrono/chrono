---
layout:null
---
// Crawls through all pages and adds them to search index

{
{% for post in site.posts %}
      "{{ post.url | slugify }}": {
      "title": "{{ post.title | xml_escape }}",
      "content"  : "{{post.content | strip_html | remove:  " " | escape | remove: "\"}}",
      "url": " {{ post.url | xml_escape }}",
      }
      {% unless forloop.last %},{% endunless %}
    {% endfor %}
    {% for page in site.pages %}
      "{{ page.url | slugify }}": {
      "title": "{{ page.title | xml_escape }}",
      "content"  : "{{page.content | strip_html | remove:  " " | escape | remove: "\"}}",
      "url": " {{ page.url | xml_escape }}",
      }
      {% unless forloop.last %},{% endunless %}
    {% endfor %}
}
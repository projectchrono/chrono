all: $(BINFILE_DEMO_BRICKS) \
     $(BINFILE_DEMO_PENDULUM) \
     $(BINFILE_DEMO_FOURBAR) \
     $(BINFILE_DEMO_CRANK) \
     $(BINFILE_DEMO_COLLISION) \
     $(BINFILE_DEMO_BENChMARK) \

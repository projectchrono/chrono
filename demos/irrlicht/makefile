     $(BINFILE_DEMO_SPH) \
     $(BINFILE_DEMO_CONVEYOR)


purge:
	-@$(DEL) -f .*~ *~ #*

clean:
	-@$(DEL) $(OFILE_DEMO_BRICKS) \
	       $(OFILE_DEMO_PENDULUM) \
	       $(OFILE_DEMO_FOURBAR) \
	       $(OFILE_DEMO_TRACKS) \
	       $(OFILE_DEMO_CRANK) \
	       $(OFILE_DEMO_COLLISION) \
	       $(OFILE_DEMO_BENChMARK) \
	       $(OFILE_DEMO_SUSPENSION) \
	       $(OFILE_DEMO_GEARS) \
	       $(OFILE_DEMO_MECANUM) \
	       $(OFILE_DEMO_TRACKS) \
	       $(OFILE_DEMO_FRICTION) \
	       $(OFILE_DEMO_FORKLIFT) \
	       $(OFILE_DEMO_TIRE) \
	       $(OFILE_DEMO_DECOMPOSITION) \
	       $(OFILE_DEMO_MESHLESS) \
	       $(OFILE_DEMO_SPH) \
	       $(OFILE_DEMO_CONVEYOR)

	-@$(DEL) $(BINFILE_DEMO_COLLISION) \
		$(BINFILE_DEMO_BENChMARK) \
		$(BINFILE_DEMO_CRANK) \
		$(BINFILE_DEMO_FOURBAR) \
		$(BINFILE_DEMO_TRACKS) \
		$(BINFILE_DEMO_PENDULUM) \
		$(BINFILE_DEMO_BRICKS) \
		$(BINFILE_DEMO_SUSPENSION) \
		$(BINFILE_DEMO_GEARS) \
		$(BINFILE_DEMO_MECANUM) \
